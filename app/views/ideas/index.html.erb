<div class="col-sm-10 ideas">

  <h1>Ideas</h1>

  <table class='table table-striped table-bordered'>
    <thead>
      <tr>
        <th>Mastermind</th>
        <th>Link</th>
        <th>Revenue</th>
        <th>Costs</th>
        <th>DIP</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @ideas.each do |idea| %>
        <tr>
          <td><%= idea.player.name %></td>
          <td><%= idea.link %></td>
          <td><%= Money.us_dollar(idea.revenue).format %></td>
          <td><%= Money.us_dollar(idea.costs).format %></td>
          <td><%= Money.us_dollar(idea.revenue - idea.costs).format %></td>
          <td class='edit'><%= link_to 'Show', idea %> |
              <%= link_to 'Edit', edit_idea_path(idea) %> |
              <%= link_to 'Delete', idea, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New idea', new_idea_path %>
  <br>
  <br>
  <%= link_to 'Score Board', root_path %>

</div>